{
  "name": "@moshensky/reactron",
  "version": "1.0.0",
  "description": "reusable react bits, components, small utils and a like",
  "main": "index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.es.js"
    },
    "./styles.css": {
      "require": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "tsc": "tsc --noEmit --pretty",
    "tsc:watch": "npm run tsc -- --watch",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "update-deps": "npx npm-check-updates --configFileName .ncurc.js",
    "build": "vite build && npm run build:css",
    "build:css": "tailwindcss -m -i ./src/tailwind-entry.css -o ./dist/styles.css",
    "storybook": "concurrently \"npm run storybook:css\" \"storybook dev -p 6006\"",
    "storybook:css": "tailwindcss -w -i ./src/tailwind-entry.css -o ./src/index.css",
    "build-storybook": "concurrently \"npm run build-storybook:css\" \"storybook build\"",
    "build-storybook:css": "tailwindcss -m -i ./src/tailwind-entry.css -o ./src/index.css",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moshensky/reactron.git"
  },
  "author": "Nikita Moshenskiy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moshensky/reactron/issues"
  },
  "homepage": "https://github.com/moshensky/reactron#readme",
  "peerDependencies": {
    "@mdi/js": "^7.2.96",
    "@mdi/react": "^1.6.1",
    "fp-ts": "^2.11.5",
    "io-ts": "^2.2.16",
    "react": ">=17.0.0 <19.0.0",
    "react-dom": ">=17.0.0 <19.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@popperjs/core": "^2.10.2",
    "cropperjs": "^1.5.12",
    "date-fns": "^2.25.0",
    "downshift": "^6.1.7",
    "final-form": "^4.20.9",
    "final-form-arrays": "^3.1.0",
    "is-hotkey": "^0.2.0",
    "match-sorter": "^6.3.1",
    "react-datepicker": "^4.11.0",
    "react-dropzone": "^11.4.2",
    "react-final-form": "^6.5.9",
    "react-final-form-arrays": "^3.1.4",
    "react-transition-group": "^4.4.2",
    "react-window": "^1.8.9",
    "slate": "^0.72.3",
    "slate-react": "^0.72.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.27",
    "@storybook/addon-interactions": "^7.0.27",
    "@storybook/addon-links": "^7.0.27",
    "@storybook/blocks": "^7.0.27",
    "@storybook/react": "^7.0.27",
    "@storybook/react-vite": "^7.0.27",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@tailwindcss/forms": "^0.5.4",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.0.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-storybook": "^0.6.12",
    "postcss": "^8.4.26",
    "prettier": "^2.5.0",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.0",
    "vite-plugin-dts": "^3.2.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  }
}
